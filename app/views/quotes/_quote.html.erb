<div class="quote">
  <%= link_to quote.name, quote_path(quote) %>

  <div class="quote__actions">
    <%= link_to "Delete",
          quote_path(quote),
          method: :delete,
          class: "btn btn--light" %>

    <%= link_to "Edit",
          edit_quote_path(quote),
          class: "btn btn--light" %>
  </div>
</div>
